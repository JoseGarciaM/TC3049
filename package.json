{
  "name": "knowledgerally",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "dev": "concurrently \"npm run serve\" \"npm run studio\"",
    "build": "vue-cli-service build",
    "studio": "cd studio && npm run dev",
    "now-dev": "npm run dev"
  },
  "engines": {
    "node": "14.x"
  },
  "dependencies": {
    "@sanity/client": "^2.10.5",
    "@sanity/image-url": "^0.140.22",
    "axios": "^0.21.1",
    "core-js": "^3.13.1",
    "lodash": "^4.17.21",
    "micro": "^9.3.4",
    "micro-cors": "^0.1.1",
    "micro-query": "^0.3.0",
    "nanoid": "^3.1.23",
    "vue": "^2.6.12",
    "vue-qrcode-reader": "^3.0.1",
    "vue-router": "^3.5.1",
    "vue2-touch-events": "^3.2.2",
    "vuex": "^3.6.2",
    "vuex-persist": "^3.1.3"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.5.13",
    "@vue/cli-plugin-eslint": "^4.5.13",
    "@vue/cli-plugin-router": "^4.5.13",
    "@vue/cli-plugin-vuex": "^4.5.13",
    "@vue/cli-service": "^3.0.5",
    "@vue/eslint-config-prettier": "^6.0.0",
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.0.2",
    "eslint": "^7.27.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-jsdoc": "^32.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-vue": "^7.10.0",
    "lint-staged": "^9.5.0",
    "node-sass": "^4.13.0",
    "prettier": "^1.19.1",
    "sass-loader": "^7.1.0",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/recommended",
      "@vue/prettier"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "vue/require-prop-types": 1,
      "vue/attributes-order": 1,
      "vue/object-curly-spacing": 1,
      "no-console": 1
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none"
  }
}
